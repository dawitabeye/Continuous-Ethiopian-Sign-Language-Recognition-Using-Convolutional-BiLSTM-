sudo apt update
sudo apt install certbot

sudo certbot certonly --manual --preferred-challenges dns \
-d dawitabeye.com -d '*.dawitabeye.com'

# (Follow prompt: create DNS TXT records when asked)

# Example record:
# _acme-challenge.dawitabeye.com  TXT  "your_verification_token"

# After DNS propagation, press Enter to continue

# Certificate files location:
# /etc/letsencrypt/live/dawitabeye.com/fullchain.pem
# /etc/letsencrypt/live/dawitabeye.com/privkey.pem

# Example Nginx SSL block:
# ssl_certificate /etc/letsencrypt/live/dawitabeye.com/fullchain.pem;
# ssl_certificate_key /etc/letsencrypt/live/dawitabeye.com/privkey.pem;
